<%= simple_form_for(@event, html: {class: 'form-vertical' }) do |f|%>
    <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
          <% @event.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.input :name, :autofocus => true %>
    <%= f.input :description %>

    <h2>
      Escolha os participantes deste evento:
    </h2>
    <% @users.each do |user| %>
        <div>
          <% if user.id == @event.owner_id or ( @event.new_record? and current_user == user ) %>
            <%= check_box_tag "users_ids[]", user.id, true, disabled: true %>
          <% else %>
            <%= check_box_tag "users_ids[]", user.id, @event.users.include?(user) %>
          <% end %>
          <%= user.name%>
        </div>
    <% end %>

    <div class="form-actions">
        <%= f.button :submit, :class => 'btn-primary' %>
        <%= link_to t('cancel', :default => t("helpers.links.cancel")),
                  @event.new_record? ? events_path : event_path(@event), :class => 'btn' %>
    </div>

<% end %>
