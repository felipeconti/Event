<%- model_class = Poll -%>

<h2><%= t("models.polls") %></h2>

<table class="table table-hover table-bordered table-sevented" id="table_poll">
  <tbody>
    <%= sync partial: 'poll_row', collection: @event.polls %>
    <%= sync_new partial: 'poll_row', resource: Poll.new, direction: :append%>
  </tbody>
</table>

<br>

<% if user_can_modify?(@event) %>
  <div class="add-master-button">
    <%= link_to t('helpers.titles.new',:model => t("models.poll")), new_event_poll_path(@event), class: 'btn btn-primary' %>
  </div>
<% end%>