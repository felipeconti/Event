<div class="row-fluid">
  <div class="span12">
    <%= simple_form_for [@trip, @comment || @trip.comments.new] do |f| %>
        <% if f.object.errors.any? %>
            <% f.object.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        <% end %>
        <div class="row-fluid">
          <%= f.text_area :message, rows: 2, class: 'span12' %>
        </div>
        <div class="row-fluid">
          <div class="span12 text-left">
            <%= f.button :submit, "Add this comment" %>
          </div>
        </div>
    <% end %>
  </div>
</div>