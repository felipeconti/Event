<tr>
    <td><%= link_to '', poll, :class=>"icon-search" %></td>
    <td><%= poll.description%></td>
    <td><%= poll.complement %></td>
    <% if current_user.super_user %>
        <td><%= poll.likes.size %></td>
        <td><%= poll.dislikes.size %></td>
    <% end %>
    <td><%= link_to image_tag("like.png", :size => "25x20"), like_poll_path(poll), method: "post" %></td>
    <td><%= link_to image_tag("dislike.png", :size => "25x20"), dislike_poll_path(poll), method: "post" %></td>
    <% if current_user.super_user %>
        <td class="btn_actions">
        <%= link_to t('edit', :default => t("helpers.links.edit")), edit_poll_path(poll), :class => 'btn btn-mini' %>
        <%= link_to t('destroy', :default => t("helpers.links.destroy")),
                    poll,
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => t('sure'))) },
                    :class => 'btn btn-mini btn-danger' %>
        </td>
    <% end %>
</tr>
