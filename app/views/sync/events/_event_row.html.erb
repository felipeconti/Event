<tr>
    <td><%= link_to '  ' + event.name, event, :class=>"icon-search" %></td>
    <% if member_of?(event, current_user) %>
      <th><%=t("participating")%></th>
    <% else %>
      <th><%= link_to t("request_participation"), request_participation_event_path(event) %>
      </th>
    <% end %>
    <% if current_user.super_user %>
        <td class="btn_actions">
        <%= link_to t('edit', :default => t("helpers.links.edit")),
                    edit_event_path(event), :class => 'btn btn-mini' %>
        <%= link_to t('destroy', :default => t("helpers.links.destroy")),
                    event,
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => t('sure'))) },
                    :class => 'btn btn-mini btn-danger' %>
        </td>
    <% end %>
</tr>
