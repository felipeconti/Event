<tr>
    <td><%= link_to '', event_item_path(@event, item), :class=>"icon-search" %></td>
    <td><%= item.name %></td>
    <td><%= item.description %></td>
    <td><%= item.amount %></td>
    <td><%= item.value %></td>
    
    <% if user_can_modify?(@event) %>
        <td class="btn_actions">
        <%= link_to t('edit', :default => t("helpers.links.edit")), edit_event_item_path(@event, item), :class => 'btn btn-mini' %>
        <%= link_to t('destroy', :default => t("helpers.links.destroy")),
                    event_item_path(@event, item),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => t('sure'))) },
                    :class => 'btn btn-mini btn-danger' %>
        </td>
    <% end %>
</tr>
